/* pages/scanFailure/scanFailure.wxss */
#scan-failure-view {
    min-height: 100vh;
    width: 100%;
    background-color: #F2F1F6;
    padding-bottom: 109px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}
#scan-failure-text {
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
#scan-failure-reason {
    margin: 0 59px;
    text-align: center;
    margin-top: 3px;
}
#scan-failure-ok-button {
    height: 44px;
    width: 165px;
    background-color: #007AFF;
    border-radius: 10px;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
}